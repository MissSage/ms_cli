{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "lib",
    "baseUrl": "./",
    "lib": ["ESNext"],
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}